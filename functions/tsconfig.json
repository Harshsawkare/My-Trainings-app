{
  "compilerOptions": {
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ES2020",  
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node", "firebase-admin", "firebase-functions"] 
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
